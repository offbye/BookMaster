<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:spacing="5dp" android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent" android:padding="6dp"  android:gravity="center" 
		android:layout_height="wrap_content" android:background="@drawable/tbg">
		<ImageButton android:id="@+id/returnhome"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:src="@xml/returnhome" android:background="#00ffffff"
			android:layout_alignParentLeft="true" />
		
		<Button android:id="@+id/previous" 
			android:layout_width="wrap_content" android:background="@xml/btn"
			android:text="@string/btn_previous" android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/next" android:visibility="invisible"/>
		<Button android:id="@+id/next"  android:layout_marginLeft="5dp"
			android:layout_width="wrap_content" android:background="@xml/btn"
			android:text="@string/btn_next" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:visibility="invisible"/>
	</RelativeLayout>
	<ListView android:id="@+id/listview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:padding="5dp"
		android:layout_gravity="center_horizontal">
	</ListView>
</LinearLayout>

